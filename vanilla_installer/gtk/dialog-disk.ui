<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <requires lib="libadwaita" version="1.0" />
    <template class="VanillaDefaultDiskPartModal" parent="AdwWindow">
        <property name="title" translatable="yes">Configure Disk</property>
        <property name="modal">true</property>
        <property name="default-width">500</property>
        <property name="default-height">450</property>
        <child>
            <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                    <object class="AdwHeaderBar"></object>
                </child>
                <child>
                    <object class="AdwPreferencesPage">
                        <child>
                            <object class="AdwPreferencesGroup">
                                <child>
                                    <object class="AdwActionRow">
                                        <property name="title">Use Entire Disk</property>
                                        <property name="subtitle">This will erase all data on the disk.</property>
                                        <child type="prefix">
                                            <object class="GtkCheckButton">
                                                <property name="valign">center</property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                                <child>
                                    <object class="AdwExpanderRow">
                                        <property name="title">Manual Partitioning</property>
                                        <property name="subtitle">Choose how to partition the disk.</property>
                                        <child type="prefix">
                                            <object class="GtkCheckButton">
                                                <property name="valign">center</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="AdwActionRow">
                                                <property name="title">Open GParted</property>
                                                <property name="subtitle">Open GParted to manually partition the disk.</property>
                                                <property name="activatable">true</property>
                                                <child type="suffix">
                                                    <object class="GtkImage">
                                                        <property name="icon-name">drive-harddisk-symbolic</property>
                                                        <property name="pixel-size">16</property>
                                                    </object>
                                                </child>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="AdwPreferencesGroup" id="group_partitions">
                                <property name="title">Partitions</property>
                                <property name="description">The following partitions was found on the disk.</property>
                                <child>
                                    <object class="AdwExpanderRow">
                                        <property name="title">/dev/nvme0n1p1</property>
                                        <property name="subtitle">1 GB</property>
                                        <child>
                                            <object class="AdwComboRow">
                                                <property name="title">Format</property>
                                                <property name="subtitle">Choose a new file system or leave as is.</property>
                                                <property name="model">
                                                    <object class="GtkStringList">
                                                        <items>
                                                            <item>none</item>
                                                            <item>btrfs</item>
                                                            <item>ext4</item>
                                                            <item>ext3</item>
                                                            <item>fat32</item>
                                                            <item>xfs</item>
                                                            <item>swap</item>
                                                        </items>
                                                    </object>
                                                </property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="AdwComboRow">
                                                <property name="title">Mount Point</property>
                                                <property name="subtitle">Choose a mount point for the partition.</property>
                                                <property name="model">
                                                    <object class="GtkStringList">
                                                        <items>
                                                            <item>none</item>
                                                            <item>/</item>
                                                            <item>/boot</item>
                                                            <item>/boot/efi</item>
                                                            <item>/home</item>
                                                            <item>/opt</item>
                                                            <item>/tmp</item>
                                                            <item>/usr</item>
                                                            <item>/var</item>
                                                        </items>
                                                    </object>
                                                </property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>