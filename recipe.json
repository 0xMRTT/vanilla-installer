{
    "log_file": "/etc/vanilla/installer.log",
    "distro_name": "Vanilla OS",
    "distro_logo": "org.vanillaos.Installer", 
    "pre_run": [
        "sudo apx --sys update", 
        "sudo apx --sys install -f"
    ],
    "post_run": [
        "sudo apx --sys update", 
        "sudo apx --sys install -f"
    ],
    "tour": {
        "welcome": {
            "resource": "/org/vanillaos/Installer/assets/welcome.svg",
            "title": "Start the Tour",
            "description": "Learn about the key features in Vanilla OS."
       },
       "overview": {
           "resource": "/org/vanillaos/Installer/assets/overview.svg",
           "title": "Get an Overview",
           "description": "Press the Super key to see open windows and apps."
       },
       "search": {
           "resource": "/org/vanillaos/Installer/assets/search.svg",
           "title": "Just Type to Search",
           "description": "Type in the overview to search. Launch apps,find things."
       },
       "workspaces": {
           "resource": "/org/vanillaos/Installer/assets/workspaces.svg",
           "title": "Keep on Top with Workspaces",
           "description": "Easily organize windows with the workspace view."
       },
       "done": {
           "resource": "/org/vanillaos/Installer/assets/ready-to-go.svg",
           "title": "That's it. Have a nice day!",
           "description": "To get more advice and tips,see the Help app."
       }
    },
    "steps": {
        "welcome": {
            "template": "welcome"
        },
        "language": {
            "template": "language"
        },
        "keyboard": {
            "template": "keyboard"
        },
        "timezone": {
            "template": "timezone"
        },
        "disk": {
            "template": "disk"
        },
        "users": {
            "template": "users"
        }
    }
}
